<div class='exchange_box col-sm-12'>
  <div class='card'>

    <div class='card-header mb-3 text-center'>
      Simule sua convers√£o
    </div>

    <div class='card-block'>
      <div class="row">
        <div class="col-sm-12">
          <%= form_tag('/convert', method: :get, class:"form-inline justify-content-center", id: 'exchange_form') do %>
              <div class="row align-items-end">
                <div class='form-group col-12 col-sm-3 col-md-12 col-lg-3'>
                  <input type='number' name='amount' id='amount' class='form-control' placeholder='Quantidade' step='any' required>
                </div>
                <div class='form-group col-12 col-sm-12 col-md-3 col-lg-2'>
                  <label for="source_currency">De:</label>
                  <%= select_tag 'source_currency', options_for_select(currency_list, 'BRL'), class: 'form-control', id: 'source_currency' %>
                </div>

                <div class='form-group col-12 col-sm-12 col-md-12 col-lg-1'>
                  <button type="button" class='btn material-design-icons' id="swap" style='background-color:transparent;'>
                    <i class="material-icons md-60">
                      swap_horiz
                    </i>
                  </button>
                </div>

                <div class='form-group col-12 col-sm-12 col-md-12 col-lg-2'>
                  <label>Para:</label>
                  <%= select_tag 'target_currency', options_for_select(currency_list, 'EUR'), class: 'form-control', id: 'target_currency'%>
                </div>
                <div class='form-group col-12 col-sm-12 col-md-12 col-lg-3'>
                  <input type='text' id='result' name='result' class='form-control' placeholder='Resultado' readonly>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
